<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Add missing columns to audit_logs table -->
    <changeSet id="audit-logs-columns-1" author="system">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="audit_logs"/>
            <not>
                <columnExists tableName="audit_logs" columnName="category"/>
            </not>
        </preConditions>
        <addColumn tableName="audit_logs">
            <column name="category" type="VARCHAR(50)" defaultValue="GENERAL">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Add timestamp column if missing -->
    <changeSet id="audit-logs-columns-2" author="system">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="audit_logs"/>
            <not>
                <columnExists tableName="audit_logs" columnName="timestamp"/>
            </not>
        </preConditions>
        <addColumn tableName="audit_logs">
            <column name="timestamp" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Add severity column if missing -->
    <changeSet id="audit-logs-columns-3" author="system">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="audit_logs"/>
            <not>
                <columnExists tableName="audit_logs" columnName="severity"/>
            </not>
        </preConditions>
        <addColumn tableName="audit_logs">
            <column name="severity" type="VARCHAR(20)" defaultValue="INFO">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Create indexes only if columns exist -->
    <changeSet id="audit-logs-indexes-safe" author="system">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="audit_logs"/>
            <columnExists tableName="audit_logs" columnName="category"/>
            <columnExists tableName="audit_logs" columnName="severity"/>
            <not>
                <indexExists indexName="idx_audit_category"/>
            </not>
        </preConditions>
        <createIndex tableName="audit_logs" indexName="idx_audit_category">
            <column name="category"/>
        </createIndex>
    </changeSet>

    <changeSet id="audit-logs-indexes-safe-2" author="system">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="audit_logs"/>
            <columnExists tableName="audit_logs" columnName="severity"/>
            <not>
                <indexExists indexName="idx_audit_severity"/>
            </not>
        </preConditions>
        <createIndex tableName="audit_logs" indexName="idx_audit_severity">
            <column name="severity"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>