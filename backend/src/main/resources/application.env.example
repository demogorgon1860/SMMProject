# ===============================
# SMM PANEL ENVIRONMENT VARIABLES
# ===============================
# Copy this file to .env and set the actual values for your environment
# IMPORTANT: Never commit actual secrets to version control

# ===============================
# DATABASE CONFIGURATION
# ===============================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smm_panel
DB_USER=smm_admin
DB_PASSWORD=your_secure_db_password

# Database Connection Pool (adjust based on your PostgreSQL max_connections)
DB_MAX_POOL_SIZE=50
DB_MIN_IDLE=10
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000
DB_LEAK_DETECTION_THRESHOLD=60000

# ===============================
# REDIS CONFIGURATION
# ===============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ===============================
# SECURITY CONFIGURATION
# ===============================
# JWT Secret (must be at least 64 characters for security)
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_64_characters_long_for_production
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# API Key Configuration
API_KEY_GLOBAL_SALT=your_secure_api_key_salt

# ===============================
# CORS CONFIGURATION
# ===============================
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===============================
# EXTERNAL API CONFIGURATIONS
# ===============================

# Binom V2 API
BINOM_API_URL=https://your-binom-domain.com/api
BINOM_API_KEY=your_binom_api_key
BINOM_API_TIMEOUT=30000

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key

# Cryptomus Payment API
CRYPTOMUS_API_URL=https://api.cryptomus.com/v1
CRYPTOMUS_API_KEY=your_cryptomus_api_key
CRYPTOMUS_API_SECRET=your_cryptomus_api_secret
CRYPTOMUS_WEBHOOK_SECRET=your_webhook_secret
CRYPTOMUS_MERCHANT_ID=your_merchant_id
CRYPTOMUS_MIN_DEPOSIT=5.00

# ===============================
# KAFKA CONFIGURATION
# ===============================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ===============================
# CACHING CONFIGURATION
# ===============================
# Cache TTL values in seconds
CACHE_SERVICES_TTL=3600
CACHE_USERS_TTL=1800
CACHE_COEFFICIENTS_TTL=7200
CACHE_YOUTUBE_TTL=600

# ===============================
# MONITORING CONFIGURATION
# ===============================
ERROR_INCLUDE_STACK_TRACE=false
ERROR_INCLUDE_DEBUG_INFO=false

# ===============================
# FEATURE FLAGS
# ===============================
YOUTUBE_PROCESSING_ENABLED=true
BINOM_INTEGRATION_ENABLED=true
PAYMENT_PROCESSING_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true

# ===============================
# LIQUIBASE CONFIGURATION
# ===============================
LIQUIBASE_CONTEXTS=all
LIQUIBASE_DROP_FIRST=false
LIQUIBASE_SHOULD_RUN=true
LIQUIBASE_TEST_ROLLBACK=false

# ===============================
# LOGGING CONFIGURATION
# ===============================
LOG_FILE_PATH=/var/log/smm-panel/application.log