# SMM Panel Environment Configuration
# CRITICAL: Do not commit this file to version control - add to .gitignore

# ===============================
# DATABASE CONFIGURATION (REQUIRED)
# ===============================
POSTGRES_DB=smm_panel
POSTGRES_USER=smm_admin
POSTGRES_PASSWORD=your_secure_db_password_here

# Database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smm_panel
DB_USER=smm_admin
DB_PASSWORD=your_secure_db_password_here

# ===============================
# REDIS CONFIGURATION (REQUIRED)
# ===============================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# ===============================
# KAFKA CONFIGURATION (REQUIRED)
# ===============================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ===============================
# JWT SECURITY (REQUIRED)
# ===============================
JWT_SECRET=your-super-secret-jwt-key-for-production-must-be-at-least-64-characters-long-and-very-secure
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# ===============================
# EXTERNAL API KEYS (REQUIRED)
# ===============================

# Binom Integration
BINOM_API_URL=https://your-binom-domain.com/api
#BINOM_API_KEY=8f25ea1198f24b9dbcd1ad6efbed8d37fe8b10988b6e2ef2034d21ce627a5da5
BINOM_API_KEY=your_binom_api_key_here
# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key_here

# Cryptomus Payment Processing
CRYPTOMUS_API_URL=https://api.cryptomus.com/v1
CRYPTOMUS_API_KEY=your_cryptomus_api_key_here
CRYPTOMUS_API_SECRET=your_cryptomus_api_secret_here
CRYPTOMUS_WEBHOOK_SECRET=your_cryptomus_webhook_secret_here

# ===============================
# APPLICATION SETTINGS
# ===============================
SPRING_PROFILES_ACTIVE=dev
TZ=UTC

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://demo.perfectpanel.com

# ===============================
# MONITORING & OBSERVABILITY
# ===============================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# ===============================
# PERFORMANCE TUNING
# ===============================
HIBERNATE_SHOW_SQL=false
HIBERNATE_FORMAT_SQL=false
HIBERNATE_SQL_COMMENTS=false
HIBERNATE_STATISTICS=true
HIBERNATE_BATCH_SIZE=25
HIBERNATE_FETCH_SIZE=50
HIBERNATE_DEFAULT_BATCH_FETCH_SIZE=16
HIBERNATE_L2_CACHE_ENABLED=true
HIBERNATE_QUERY_CACHE_ENABLED=true
HIBERNATE_QUERY_PLAN_CACHE_SIZE=2048
HIBERNATE_QUERY_PLAN_PARAMETER_CACHE_SIZE=128

# ===============================
# FEATURE FLAGS
# ===============================
YOUTUBE_PROCESSING_ENABLED=true
BINOM_INTEGRATION_ENABLED=true
PAYMENT_PROCESSING_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
TRANSACTION_MONITORING_ENABLED=false
TRANSACTION_TRACE_ENABLED=false
QUERY_COUNT_MONITORING_ENABLED=false

# ===============================
# FILE SYSTEM
# ===============================
FILE_UPLOAD_PATH=/tmp/smm-panel/uploads
LOG_FILE_PATH=/var/log/smm-panel/application.log

# ===============================
# SELENIUM CONFIGURATION
# ===============================
SELENIUM_DRIVER_PATH=/usr/local/bin/chromedriver

# ===============================
# ERROR HANDLING
# ===============================
ERROR_INCLUDE_STACK_TRACE=false
ERROR_INCLUDE_DEBUG_INFO=false